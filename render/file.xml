<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map srs="+proj=longlat +datum=WGS84 +no_defs" background-color="white">
    <Layer name="geojson-layer" srs="+proj=longlat +datum=WGS84 +no_defs">
        <StyleName>geojson-style</StyleName>
        <Datasource>
            <Parameter name="type">geojson</Parameter>
            <Parameter name="file">shanghai-highway.geojson</Parameter>
        </Datasource>
    </Layer>

    <Style name="geojson-style">
        <Rule>
            <!-- 渲染多边形 -->
            <PolygonSymbolizer fill="blue" fill-opacity="0.5"/>
            <!-- 渲染边界线 -->
            <LineSymbolizer stroke="black" stroke-width="1"/>
        </Rule>
    </Style>

</Map>
